@charset "UTF-8";
body{
    font-family: SimHei;
    font-size: 14px;
    color: #333333;
}
*{
    margin: 0;
    padding: 0;
    border: 0;
    outline: none;
}
/* 版心 */
.lg-container{
  width: 1200px;
  margin: 0 auto;
}
.fl{
    float: left;
}
.fr{
    float: right;
}
.clearfix:after{
    content: "";
    height: 0;
    display: block;
    clear: both;
    zoom:1 ;
}
a{
    text-decoration: none;
}
ul{
   list-style: none; 
}
.mt4{
    margin-top: 4px;
}
.ml4{
    margin-left: 4px;
}
.m10{
    margin: 10px 10px;
}
.m6{
    margin: 6px 10px;
}
.mt20{
    margin-top: 20px;
}
.mt40{
    margin-top: 40px;
}
.mt70{
    margin-top: 70px;
}
.mb8{
    margin-bottom: 8px;
}
.mt4{
    margin-top: 4px;
}
.pl22{
    padding-left: 22px;
}
.pl10{
    padding-left: 10px;
}
.f24{
    font-size: 24px;
}
.f18{
    font-size: 18px;
}
.f16{
    font-size: 16px;
}
.f12{
    font-size: 12px;
}
.c42{
    color: #f4290d;
}
